            "settings": [
                {
                    "type": "text",
                    "id": "subheading",
                    "default": "Turn your room with panto into a lot more minimalist and modern with ease and speed",
                    "label": "paragrap"
                }
            ]
        },
        {
            "name": "Input",
            "type": "input",
            "settings": [
                {
                    "type": "text",
                    "id": "input",
                    "default": "Search furniture",
                    "label": "paragrap"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "spf-banner",
            "blocks": [
                {
                    "type": "heading"
                },
                {
                    "type": "text"
                }
            ]
        }
    ]
}
