



<div class="header-wraper" style="background-image:url('{{ section.settings.spfimage.src | img_url: 'large' }}')"​​​​​​ >
    
    <div class="section hero">
       

        <!-- <h1 class="hero-heading text">
            {{ section.settings.heading }}
        </h1>

        
        <h2 class="sub-hero-heading text">
            {{ section.settings.subheading }}
        </h2> -->
        {%- for block in section.blocks -%}
            {%- case block.type -%}
                {%- when 'heading' -%}
                    <h1 class="hero-heading text ">
                        {{ block.settings.heading }}
                    </h1>
                    
                {%- when 'text' -%}
                    <h2 class="sub-hero-heading text">
                        {{ block.settings.subheading }}
                    </h2>

                {%- when 'input' -%}
                    <form action="{{ routes.search_url }}">
                        <div class="form-search dfs">
                            <div class="text hero-search">
                                <input type="text" placeholder="{{ block.settings.input }}"
                                name="q"
                                value="{{ search.terms | escape }}"
                                > 
                            </div>
                            <button class="hero-search__icon df" type="submit" >
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                    
            {%- endcase -%}
      {%- endfor -%}

        

       
    </div>
    
    <div class="header-wraper__dot hidden-tab-mob">
        <div class="header-wraper__cricle-sofa df ">
            <div class="header-wraper__cricle-small">

            </div>
        </div>

        <div class="header-wraper__dot-options df">
            <div class="dot-options__color dfs">
                <div class="dot-options__items dot-options__items--orange df">
                    <img src="https://thanh991999.github.io/Panto_Funiture/assets/icon/vectorV.svg" alt="">
                </div>
                <div class="dot-options__items dot-options__items--blue">
                    
                </div>
                <div class="dot-options__items dot-options__items--silver">
                    
                </div>
            </div>
        </div>

    </div>

    <div class="header-wraper__dot--vase hidden-tab-mob">
        <div class="header-wraper__cricle--vase df">
            <div class="header-wraper__cricle-small--vase">
                
            </div>
        </div>

            <div class="product-wrapper__vase">
                <div class="product-block">
                    <img src="./assets/img/lohoa.jpg" alt="" class="product-img product-img__vase">

                </div>
                <div class="product-info">
                    <span class="product-name">
                        Vase flowers
                    </span>
                    <a href="#" class="product-name__detail">
                        Sakarias 
                    </a>

                    <div class="product-stars">
                        <img src="./assets/icon/Star.svg" alt="">
                        <img src="./assets/icon/Star.svg" alt="">
                        <img src="./assets/icon/Star.svg" alt="">
                        <img src="./assets/icon/Star.svg" alt="">
                        <img src="./assets/icon/Star.svg" alt="">
                    </div>

                    <div class="product-costs dfs">
                        $20
                        <button class="product-plus df">
                            <img src="./assets/icon/Plus.svg" alt="">
                        </button>
                    </div>

                </div>
            </div>

    </div>

    <div class="header-wraper__dot--vase-secondary hidden-tab-mob">
        <div class="header-wraper__cricle--vase df">
            <div class="header-wraper__cricle-small--vase">

            </div>
        </div>

        <div class="header-wraper__dot-options--vase-secondary df">
            <div class="dot-options__color dfs">
                <div class="dot-options__items dot-options__items--orange ">

                </div>
                <div class="dot-options__items dot-options__items--blue">
                    
                </div>
                <div class="dot-options__items dot-options__items--dark df">
                    <img src="https://thanh991999.github.io/Panto_Funiture/assets/icon/vectorV.svg" alt="">
                </div>
            </div>
        </div>
       
    </div>

    
</div>


{% schema %}
